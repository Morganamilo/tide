# Basic URxvt settings
URxvt.font: 9x15
URxvt.cursorBlink: true
URxvt.saveLines: 5000

# Disable scrollbar
URxvt.scrollBar: false
URxvt.mouseWheelScrollPage: false

# Enable transparency
URxvt.inheritPixmap: true
URxvt.transparent: true
URxvt.shading: 30

# Clickable URLs
URxvt.perl-ext-common:default,matcher
URxvt.url-launcher: /usr/bin/qutebrowser
URxvt.matcher.button: 1

# Use Control-Shift-V/C for X clipboard
URxvt.iso14755: false
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

# Fading scheme
*fading: 25
*fadeColor: black

# Terminal theme
*background: black
*foreground: grey

*color0: #232423
*color1: #BA2922
*color2: #7E807E
*color3: #4C4F4D
*color4: #16A085
*color5: #43746A
*color6: #00CCCC
*color7: #E0E0E0
*color8: #282928
*color9: #CC372C
*color10: #8D8F8D
*color11: #4E524F
*color12: #13BF9D
*color13: #487D72
*color14: #00D1D1
*color15: #E8E8E8
